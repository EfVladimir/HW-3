            <Button x:Name="reason" Content="TablesModel" Background="LightGray" HorizontalAlignment="Left" Height="30" Margin="410,182,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click_model"/>
            <Button x:Name="meter" Content="TablesModel" Background="LightGray" HorizontalAlignment="Left" Height="30" Margin="267,182,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click_model"/>
            <Label Content="Выберите таблицу для работы с ней" HorizontalAlignment="Center" Height="53" Margin="0,117,0,0" VerticalAlignment="Top" Width="214"/>
        </Grid>
    </Grid>
</Window>
